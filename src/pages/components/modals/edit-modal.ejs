<style>
.markdown-preview h1 { font-size: 1.5em; margin: 10px 0; }
.markdown-preview h2 { font-size: 1.3em; margin: 8px 0; }
.markdown-preview h3 { font-size: 1.1em; margin: 6px 0; }
.markdown-preview strong { font-weight: bold; }
.markdown-preview em { font-style: italic; }
.markdown-preview img { max-width: 100%; height: auto; }
.markdown-preview a { color: #007bff; text-decoration: underline; }
</style>
<div class="modal fade modal-lg" id="<%- objectId %>-edit-modal"  data-bs-backdrop="static" data-bs-keyboard="false"  tabindex="-1" aria-labelledby="<%- objectId %>-edit-modal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-4" id="<%- objectId %>-edit-modal-title"></h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary cancel-button" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary save-button">Save</button>
      </div>
    </div>
  </div>
</div>